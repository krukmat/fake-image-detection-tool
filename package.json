{
  "name": "webapp-claude",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "start-frontend": "node server.js",
    "start-backend": "cd . && python app/main.py",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:api": "jest --testPathPattern=api",
    "test:all": "concurrently \"npm run start-backend\" \"npm run start-frontend\" \"sleep 5 && npm run test:e2e\"",
    "install-browsers": "playwright install"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "next": "15.4.7",
    "nodemon": "^3.1.10",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "jest": "^30.0.5",
    "playwright": "^1.55.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
